{
    "name": "syncdbg",
    "version": "0.1.0",
    "private": false,
    "description": "SyncDBG offline-first data synchronization library.",
    "author": "Fernando Martini (https://github.com/fmartini23)",
    "license": "MIT",
    "homepage": "https://github.com/fmartini23/syncdbg#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/fmartini23/syncdbg.git"
    },
    "bugs": {
        "url": "https://github.com/fmartini23/syncdbg/issues"
    },
    "packageManager": "pnpm@8.15.0",
    "scripts": {
        "build": "pnpm --filter \"./packages/**\" build",
        "dev": "pnpm --filter \"./packages/**\" dev",
        "clean": "pnpm --filter \"./packages/**\" clean && rm -rf node_modules",
        "lint": "eslint . --ext .ts,.tsx,.js",
        "lint:fix": "eslint . --ext .ts,.tsx,.js --fix",
        "format:check": "prettier --check .",
        "format:write": "prettier --write .",
        "typecheck": "pnpm --filter \"./packages/**\" tsc --noEmit",
        "ci:check": "pnpm format:check && pnpm lint && pnpm typecheck && pnpm build"
    },
    "devDependencies": {
        "@types/react": "^18.3.3",
        "@types/uuid": "^9.0.8",
        "@typescript-eslint/eslint-plugin": "^7.13.0",
        "@typescript-eslint/parser": "^7.13.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-react": "^7.34.2",
        "eslint-plugin-react-hooks": "^4.6.2",
        "prettier": "^3.3.2",
        "react": "^18.3.1",
        "tsup": "^8.1.0",
        "typescript": "^5.4.5"
    },
    "main": ".eslintrc.js",
    "keywords": []
}
